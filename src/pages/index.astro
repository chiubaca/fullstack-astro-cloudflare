---
import { drizzle } from "drizzle-orm/d1";
// import { actions, getActionProps } from "astro:actions";

import { todo } from "../../db/schema";
import { Todo } from "../components/todo";
import { FileUpload } from "../components/file-upload";

import { bucketAccess } from "../lib/bucket-access";
const APP_DB = Astro.locals.runtime.env.APP_DB;

const { signedImageUrl } = bucketAccess(Astro.locals.runtime.env);

const url = await signedImageUrl("remote-upload-test");

const { user } = Astro.locals;

let todos: {
  id: number;
  text: string;
}[] = [];

try {
  const db = drizzle(APP_DB);

  todos = await db.select().from(todo);
} catch (err) {
  console.log("Uncaught error!", err);
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>

  <div>
    {
      !user ? (
        <div>
          <div>
            <a href="login/github"> Sign in with GitHub</a>
          </div>
          <div>
            <a href="login/google"> Sign in with Google</a>
          </div>
        </div>
      ) : (
        <div> Hello {user?.username}</div>
      )
    }
  </div>
  <body>
    <Todo client:load todos={todos} />

    <FileUpload client:load />

    <img src={url} alt="image" />
  </body>


</html>
